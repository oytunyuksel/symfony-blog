{% extends 'base.html.twig' %}
{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    <div class="container">

        <div class="row">

            <div class="col-md-8">
               <a href="{{ url('homepage') }}"><h1 class="my-4">Symfony3 <small>Blog</small></h1></a>
                <div class="card mb-4">
                        <img class="card-img-top" src="http://placehold.it/750x300" alt="Card image cap">
                        <div class="card-body">
                            <h2 class="card-title">{{ article.title }}</h2>
                            <p class="card-text">{{ article.content }}</p>
                        </div>
                        <div class="card-footer text-muted">
                            {{ article.createdAt|date('Y-m-d') }}
                        </div>
                    </div>
            </div>

            <div class="col-md-4">

                <div class="card my-4">
                    <h5 class="card-header">Kategoriler</h5>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <ul class="list-unstyled mb-0">
                                    {% for category in categories %}
                                        <li><a href="#">{{ category.title }}</a></li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card my-4">
                    <h5 class="card-header">Hakkımızda</h5>
                    <div class="card-body">
                        Bu blog henüz geliştirme aşamasındadır.
                    </div>
                </div>

            </div>

        </div>

    </div>
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Symfony3 Blog 2017</p>
        </div>
    </footer>

{% endblock %}
